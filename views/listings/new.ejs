<% layout("layouts/boilerplate") -%>
<div class = "row mt-3">
  <div class = "col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="from-lable">Title * </label>
        <input name="listing[title]" 
               placeholder="Add a catchy title" 
               type="text" 
               class="form-control"
               required/>
              <div class="valid-feedback">
                Looks good!
              </div>      </div>
      <div class="mb-3">
        <label for="description" class="from-lable">Description * </label>
        <textarea name="listing[description]"
                  placeholder="enter description"
                  class="form-control"
                  required></textarea>
      </div>
      <div class="mb-3">
        <label for="image" class="from-lable">Image</label>
        <input name="listing[image]"
               placeholder="enter image URL/Link"
               type="text" 
               class="form-control" />
      </div >
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="from-lable">Price * </label>
          <input name="listing[price]"
                 placeholder="1500"
                 class="form-control"
                required/>
                <div class="invalid-feedback">
                  Please provide a valid Price.
                </div>
        </div>
        <div class="mb-3 col-md-8" >
          <label for="country" class="from-lable">Country * </label>
          <input name="listing[country]"
                 placeholder="India"
                 type="text" 
                 class="form-control"
                 required/>
            <div class="invalid-feedback">
             Please provide a valid Country.
           </div>
      </div>
      <div class="mb-3">
        <label for="location" class="from-lable">Location * </label>
        <input name="listing[location]"
               placeholder="Panna Madhya Pradesh"
               type="text" 
               class="form-control"
              required/>
        <div class="invalid-feedback">
          Please provide a valid Location.
      </div> 
      <button class="btn-dark add-btn mt-3">Add NewOne</button>
      <br /><br />
      <a href="/listings">Back to All Listings</a>
    </form>
    </div>
  </div>